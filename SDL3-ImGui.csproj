<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <RootNamespace>SDL3_ImGui</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="ImGui.NET" Version="1.91.6.1" />
    <PackageReference Include="SDL3-CS" Version="3.2.8.2" />
    <PackageReference Include="SDL3-CS.Native" Version="3.2.*" />
    <PackageReference Include="SDL3-CS.Native.Image" Version="3.2.*" />
    <PackageReference Include="SDL3-CS.Native.TTF" Version="3.2.*" />
  </ItemGroup>

  <ItemGroup>
    <None Update="pulsar4x-menu.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
